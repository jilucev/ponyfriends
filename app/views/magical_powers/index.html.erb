<p id="notice"><%= notice %></p>

<h1>Listing Magical Powers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Intensity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @magical_powers.each do |magical_power| %>
      <tr>
        <td><%= magical_power.name %></td>
        <td><%= magical_power.intensity %></td>
        <td><%= link_to 'Show', magical_power %></td>
        <td><%= link_to 'Edit', edit_magical_power_path(magical_power) %></td>
        <td><%= link_to 'Destroy', magical_power, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

